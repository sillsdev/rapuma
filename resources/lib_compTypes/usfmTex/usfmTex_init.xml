<?xml version="1.0" encoding="UTF-8"?>

<!--
File: usfmTex.xml
Description:
This is a component type description for a USFM Scripture component to be rendered
with TeX. All file relations and processes are described in this file.

Todo:
1) Add a process section where all processes are described
2) Add file type section that describes each kind of type of file found in the component
3) Need a section to describe project folder attributes <location>
4) Need a default component section that the system will use to create a component
5) Add a group description section

# This is a save state for this file in case we need to pull info out later.

-->

<!DOCTYPE root [
  <!ELEMENT root (section+)>
  <!ELEMENT section (name, sectionID, description, (file | folder | process | setting)+)>
  <!ELEMENT file (name, type, location, dependents, createdBy, description)>
  <!ELEMENT folder (name, key, description, value)>
  <!ELEMENT process (name, type, description)>
  <!ELEMENT setting (name, key, description, type, value)>
  <!ELEMENT key (#PCDATA)>
  <!ELEMENT type (#PCDATA)>
  <!ELEMENT location (#PCDATA)>
  <!ELEMENT dependents (#PCDATA)>
  <!ELEMENT createdBy (#PCDATA)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT sectionID (#PCDATA)>
  <!ELEMENT value (#PCDATA)>
]>

<root>
    <section>
        <name>Files</name>
        <sectionID>Files</sectionID>
        <description>This section contains the names of all the usfmTex files the RPM system will use in this projects.</description>
        <section>
            <name>GlobalTex TeX File</name>
            <sectionID>globalTex</sectionID>
            <description>The global contol file that feeds into the the component control file.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of this file.</description>
                <type>string</type>
                <value>global.tex</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value>Process</value>
            </setting>
            <setting>
                <name>Version Control</name>
                <key>versionControl</key>
                <description>Is this file under version control?</description>
                <type>boolean</type>
                <value>True</value>
            </setting>
            <setting>
                <name>Dependent Files</name>
                <key>dependents</key>
                <description>The file(s) this file is dependent on.</description>
                <type>list</type>
                <value>*.ttf, ptx2pdf.tex, hyphenation.tex, .book.conf, global.sty</value>
            </setting>
        </section>
        <section>
            <name>Master TeX File</name>
            <sectionID>masterTexTex</sectionID>
            <description>The master TeX macro contol file that feeds into the the global control file.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of this file.</description>
                <type>string</type>
                <value>master.tex</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value>Process</value>
            </setting>
            <setting>
                <name>Version Control</name>
                <key>versionControl</key>
                <description>Is this file under version control?</description>
                <type>boolean</type>
                <value>True</value>
            </setting>
            <setting>
                <name>Dependent Files</name>
                <key>dependents</key>
                <description>The file(s) this file is dependent on.</description>
                <type>list</type>
                <value></value>
            </setting>
        </section>
        <section>
            <name>James Sample Text</name>
            <sectionID>jasSample</sectionID>
            <description>The Book of James sample file.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of this file.</description>
                <type>string</type>
                <version>False</version>
                <value>59_James.usfm</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value>Source</value>
            </setting>
            <setting>
                <name>Version Control</name>
                <key>versionControl</key>
                <description>Is this file under version control?</description>
                <type>boolean</type>
                <value>False</value>
            </setting>
            <setting>
                <name>Dependent Files</name>
                <key>dependents</key>
                <description>The file(s) this file is dependent on.</description>
                <type>list</type>
                <value></value>
            </setting>
        </section>
    </section>
    <section>
        <name>Folders</name>
        <sectionID>Folders</sectionID>
        <description>This section contains the settings for all the folders needed for usfmTex component processing.</description>
        <section>
            <name>Project Process Folder</name>
            <sectionID>ProcessFolder</sectionID>
            <description>The project process folder.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The folder where all processing happens.</description>
                <type>string</type>
                <value>Process</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value></value>
            </setting>
        </section>
        <section>
            <name>Project TeX Macro Folder</name>
            <sectionID>MacroFolder</sectionID>
            <description>The project TeX macro folder.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The folder where all the TeX macros for this project are kept.</description>
                <type>string</type>
                <value>Macros</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value>Process</value>
            </setting>
        </section>
        <section>
            <name>Project Source Folder</name>
            <sectionID>SourceFolder</sectionID>
            <description>The project read-only source folder.</description>
            <setting>
                <name>Name</name>
                <key>name</key>
                <description>The name of the folder that all project administrative documents will be kept.</description>
                <type>string</type>
                <value>Source</value>
            </setting>
            <setting>
                <name>Location</name>
                <key>location</key>
                <description>The location of the folder.</description>
                <type>string</type>
                <value></value>
            </setting>
        </section>
    </section>
</root>

